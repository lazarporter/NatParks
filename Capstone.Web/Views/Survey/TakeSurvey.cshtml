@model SurveyVM
@{
    ViewData["Title"] = "TakeSurvey";
}

<h2>TakeSurvey</h2>

<h2>Survey</h2>

<form method="POST" asp-controller="Survey" asp-action="TakeSurvey">
    <div class="form-group surveyForm">
        <label asp-for="survey.ParkCode">Favorite National Park</label>
        <select class="form-control" asp-for="survey.ParkCode">
            @foreach (SelectListItem item in Model.parkNames)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="survey.Email">Email</label>
        <input class="form-control" asp-for="survey.Email" />
        <span asp-validation-for="survey.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="survey.State">State of Residence</label>
        <select class="form-control" asp-for="survey.State">
            @foreach (SelectListItem item in Model.stateNames)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="survey.ActivityLevel">How Active are you?</label>
        <select class="form-control" asp-for="survey.ActivityLevel">
            @foreach (string level in Model.activityLevels)
            {
                <option value="@level">@level</option>
            }
        </select>
    </div>
    <input class="form-control form-group btn btn-warning" type="submit" value="Submit" />
</form>



