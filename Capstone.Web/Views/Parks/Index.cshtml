@model List<Park>
@{
    ViewData["Title"] = "Home";
}

<h2>Index</h2>
<div class="container">
    <table>
        @foreach (Park park in Model)
        {
            string imageFileName = park.ParkCode + ".jpg";
            <tr>
                <td>
                    <a asp-controller="Parks" asp-action="Detail" asp-route-parkCode="@park.ParkCode">
                        <div class="card">
                            <img src="/images/parks/@imageFileName" alt="@park.ParkName">
                            <div class="parkSummary">
                                <h2 class="parkName"><b>@park.ParkName</b></h2>
                                <p>@park.Description</p>
                            </div>
                        </div>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
